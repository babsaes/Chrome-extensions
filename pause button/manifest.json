{
  "manifest_version": 2,
  "name": "Pause button",
  "version": "1.0",
  "description": "Take a short break and reflect on your current browsing activity.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webNavigation",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "48": "icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}

